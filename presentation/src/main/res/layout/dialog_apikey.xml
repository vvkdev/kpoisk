<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/indent_large"
        >

    <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="@dimen/indent_normal"
            android:text="@string/keystore_warning"
            />

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/apiKeyTextInputLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:hintEnabled="false"
            >

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/apiKeyEditText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:gravity="center"
                android:maxLines="1"
                android:inputType="textCapCharacters|text"
                android:imeOptions="actionDone"
                android:hint="@string/apikey_hint"
                />

    </com.google.android.material.textfield.TextInputLayout>


</LinearLayout>
