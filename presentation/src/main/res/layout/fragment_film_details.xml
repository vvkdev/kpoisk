<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:fillViewport="true"
        tools:context=".screens.film.FilmDetailsFragment"
        >

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            >

        <ImageView
                android:id="@+id/posterImageView"
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:background="@drawable/poster_placeholder"
                android:contentDescription="@string/poster_description"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

        <TextView
                android:id="@+id/nameTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:autoSizeTextType="uniform"
                android:maxLines="3"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                app:layout_constraintTop_toTopOf="@id/posterImageView"
                app:layout_constraintStart_toEndOf="@id/posterImageView"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Невероятное пари, или Истинное происшествие, благополучно завершившееся сто лет назад"
                />

        <TextView
                android:id="@+id/foreignNameTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:autoSizeTextType="uniform"
                android:maxLines="3"
                android:textColor="?attr/colorOnSurfaceVariant"
                app:layout_constraintTop_toBottomOf="@id/nameTextView"
                app:layout_constraintStart_toStartOf="@id/nameTextView"
                app:layout_constraintEnd_toEndOf="@id/nameTextView"
                android:layout_marginTop="4dp"
                tools:text="Невероятное пари, или Истинное происшествие, благополучно завершившееся сто лет назад"
                />

        <LinearLayout
                android:id="@+id/yearLengthLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/ratingTextView"
                app:layout_constraintStart_toStartOf="@+id/foreignNameTextView"
                >

            <TextView
                    android:id="@+id/yearTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="1999-2007"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" • "
                    />

            <TextView
                    android:id="@+id/lengthTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="136 мин"
                    />
        </LinearLayout>

        <TextView
                android:id="@+id/ratingTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="8.5 (755 888 votes)"
                app:layout_constraintBottom_toBottomOf="@+id/posterImageView"
                app:layout_constraintStart_toStartOf="@+id/yearLengthLayout"
                />

        <ImageView
                android:id="@+id/has3dImageView"
                android:src="@drawable/ic_3d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/ratingTextView"
                app:layout_constraintEnd_toEndOf="parent"
                />

        <TextView
                android:id="@+id/countriesTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/posterImageView"
                tools:text="criminal • drama • biopic"
                />

        <TextView
                android:id="@+id/genresTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/countriesTextView"
                tools:text="France • USA • Great Britain"
                />

        <TextView
                android:id="@+id/descriptionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/genresTextView"
                tools:text="XML Description"
                />

        <LinearLayout
                android:id="@+id/errorLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                >

            <TextView
                    android:id="@+id/errorMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="32dp"
                    android:gravity="center"
                    />

            <Button
                    android:id="@+id/retryButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Retry"
                    />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
