<?xml version="1.0" encoding="utf-8"?>
<navigation
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/nav_graph"
        app:startDestination="@id/filmsFragment"
        >

    <fragment
            android:id="@+id/apiKeyFragment"
            android:name="com.vvkdev.presentation.fragments.ApiKeyFragment"
            tools:layout="@layout/fragment_api_key"
            >
        <action
                android:id="@+id/action_apiKeyFragment_to_filmsFragment"
                app:destination="@id/filmsFragment"
                app:launchSingleTop="true"
                app:popUpTo="@id/apiKeyFragment"
                app:popUpToInclusive="true"
                />
    </fragment>

    <fragment
            android:id="@+id/filmsFragment"
            android:name="com.vvkdev.presentation.screens.films.FilmsFragment"
            tools:layout="@layout/fragment_films"
            >
        <action
                android:id="@+id/action_filmsFragment_to_filmDetailsFragment"
                app:destination="@id/filmDetailsFragment"
                />
    </fragment>

    <fragment
            android:id="@+id/filmDetailsFragment"
            android:name="com.vvkdev.presentation.screens.films.FilmDetailsFragment"
            tools:layout="@layout/fragment_film_details"
            >
        <argument
                android:name="film_id"
                app:argType="integer"
                />
    </fragment>

</navigation>
