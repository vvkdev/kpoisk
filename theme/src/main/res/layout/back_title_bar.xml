<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rectangle_rounded_filled"
        android:backgroundTint="?attr/colorSurfaceContainerHigh"
        android:elevation="@dimen/elevation"
        >

    <ImageButton
            android:id="@+id/backImageButton"
            android:layout_width="@dimen/bar_size"
            android:layout_height="@dimen/bar_size"
            android:src="@drawable/ic_back"
            app:tint="?attr/colorOnSurfaceVariant"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            />

    <TextView
            android:id="@+id/titleTextView"
            android:layout_width="0dp"
            android:layout_height="@dimen/bar_size"
            android:paddingEnd="@dimen/indent_normal"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:lines="1"
            android:ellipsize="end"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            tools:text="Some title"
            />

</LinearLayout>
