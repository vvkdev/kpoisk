<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="App.TitleMedium.TextAppearance" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:lineHeight" tools:targetApi="28">16sp</item>
        <item name="lineHeight">16sp</item>
    </style>

    <style name="App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">@dimen/stroke_thickness</item>
        <item name="boxStrokeWidthFocused">@dimen/stroke_thickness</item>
        <item name="materialThemeOverlay">@style/App.TextInputEditText.ThemeOverlay</item>
    </style>

    <style name="App.TextInputEditText.ThemeOverlay" parent="">
        <item name="editTextStyle">@style/App.TextInputEditText</item>
    </style>

    <style name="App.TextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:padding">@dimen/indent_small</item>
    </style>

    <style name="App.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/button_gradient</item>
    </style>

    <style name="App.MaterialDialog.ThemeOverlay" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/App.MaterialDialog</item>
        <item name="materialAlertDialogTitleTextStyle">@style/App.MaterialDialog.TitleText</item>
        <item name="materialAlertDialogTitlePanelStyle">@style/App.MaterialDialog.TitlePanel</item>
    </style>

    <style name="App.MaterialDialog" parent="MaterialAlertDialog.Material3">
        <item name="backgroundInsetTop">@dimen/zero_size</item>
        <item name="backgroundInsetBottom">@dimen/indent_medium</item>
        <item name="backgroundInsetStart">@dimen/indent_medium</item>
        <item name="backgroundInsetEnd">@dimen/indent_medium</item>
        <item name="shapeAppearance">@style/App.MaterialDialog.ShapeAppearance</item>
    </style>

    <style name="App.MaterialDialog.ShapeAppearance" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerSize">@dimen/corner_medium</item>
    </style>

    <style name="App.MaterialDialog.TitleText" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textAppearance">@style/App.TitleMedium.TextAppearance</item>
    </style>

    <style name="App.MaterialDialog.TitlePanel" parent="MaterialAlertDialog.Material3.Title.Panel">
        <item name="android:paddingTop">@dimen/indent_medium</item>
        <item name="android:paddingBottom">@dimen/indent_medium</item>
        <item name="android:paddingStart">@dimen/indent_normal</item>
        <item name="android:paddingEnd">@dimen/indent_normal</item>
    </style>

    <style name="App.DividerHorizontal" parent="Widget.Material3.MaterialDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/stroke_thickness</item>
        <item name="android:layout_margin">@dimen/indent_small</item>
        <item name="android:background">?attr/colorOutlineVariant</item>
    </style>

    <style name="App.Fab" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="fabSize">mini</item>
        <item name="tint">@color/white</item>
        <item name="shapeAppearanceOverlay">@style/App.Fab.ShapeAppearanceOverlay</item>
    </style>

    <style name="App.Fab.ShapeAppearanceOverlay" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/indent_small</item>
    </style>

</resources>
